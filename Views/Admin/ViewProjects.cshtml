@{
    ViewBag.Title = "ViewProjects";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

@using NextStep.Models

<body style="background: url('../Images/bg.jpg'); height: 100px; width: auto;">
    <br /><br /><br /><br /><br /><br />
    <div class="container-fluid" style="background-color:white">

        <div class="section-title text-center wow fadeInDown">
            <h2>Registered Projects</h2>
            <p></p>
        </div>

        <!--Crntre Div-->
        <div class="col-md-12 wow fadeIn">
            <div class="contact-form clearfix">
                <!--Details of Users-->
                <!--Table-->
                <div class="table table-striped table-bordered table-hover table-condensed" style="overflow-x:auto;">
                    <table border="1">

                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Project Name</th>
                                <th>Project Holder</th>
                                <th>Description</th>
                                <th>Firm</th>
                                <th>Site Address</th>
                                <th>Postal Code</th>
                                <th>Project Type</th>
                                <th>Commencement date</th>
                                <th>Completion Date</th>
                                <th>Entry Date</th>
                                <th>Edit Details</th>
                                <th>Delete User</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                                <tr>
                                    <td>@i.Id</td>
                                    <td>@i.Project_Name</td>
                                    <td>@i.Project_Holder</td>
                                    <td>@i.Description</td>
                                    <td>@i.Firm</td>
                                    <td>@i.Site_Address</td>
                                    <td>@i.Postal_Code</td>
                                    <td>@i.Project_Type</td>
                                    <td>@i.Commencement_Date</td>
                                    <td>@i.Completion_Date</td>
                                    <td>@i.Entry_Date</td>

                                    <td>@Html.ActionLink("Edit", "EditProjectDetails", new { id = i.Id })</td>
                                    <td>@Html.ActionLink("Delete", "DeleteProject", new { id = i.Id })</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>

                <br /><br /><br />
            </div> <!-- end .contact-form -->
        </div> <!-- .col-md-12 -->



    </div>
</body>
