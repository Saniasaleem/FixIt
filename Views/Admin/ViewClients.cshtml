@{
    ViewBag.Title = "ViewClients";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

@using NextStep.Models;
<body style="background: url('../Images/bg.jpg'); height: 100px; width: auto;">
    <br /><br /><br /><br /><br /><br />
    <div class="container-fluid" style="background-color:white">

        <div class="section-title text-center wow fadeInDown">
            <h2>Registered Clients</h2>
            <p></p>
        </div>

        <!--Crntre Div-->
        <div class="col-md-12 wow fadeIn">
            <div class="contact-form clearfix">
                <!--Details of Users-->
                <!--Table-->
                <div class="table table-striped table-bordered table-hover table-condensed" style="overflow-x:auto;">
                    <table border="1">

                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Country</th>
                                <th>City</th>
                                <th>Postal Code</th>
                                <th>Contact</th>
                                <th>CNIC</th>
                                <th>Date</th>
                                <th>Edit Details</th>
                                <th>Delete User</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                                <tr>
                                    <td>@i.Id</td>
                                    <td>@i.First_Name</td>
                                    <td>@i.Last_Name</td>
                                    <td>@i.Username</td>
                                    <td>@i.Email</td>
                                    <td>@i.Address</td>
                                    <td>@i.Country</td>
                                    <td>@i.City</td>
                                    <td>@i.Postal_Code</td>
                                    <td>@i.Contact</td>
                                    <td>@i.CNIC</td>
                                    <td>@i.Date</td>

                                    <td>@Html.ActionLink("Edit", "EditUserDetails", new { id = i.Id })</td>
                                    <td>@Html.ActionLink("Delete", "DeleteUser", new { id = i.Id })</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>

                <br /><br /><br />
            </div> <!-- end .contact-form -->
        </div> <!-- .col-md-12 -->

       

    </div>
   </body>
